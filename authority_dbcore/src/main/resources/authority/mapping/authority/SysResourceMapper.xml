  	</if>
  	<if test="endDate != null">
  		AND `create_time` <![CDATA[ <= ]]>#{endDate}
  	</if>
  	</trim>
  	<if test="rows != null">
  		LIMIT #{beginNum},#{rows};
  	</if>
	</select>
